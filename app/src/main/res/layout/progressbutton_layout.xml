<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="1dp"
    >

    <ru.assistent.holidayassistant.views.elements.TextViewFonted
        android:id="@+id/button_of_action"
        style="@style/AppButtonNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:elevation="1dp"
        android:text=""
        tools:text="Какое-то действие"
        />

    <ru.assistent.holidayassistant.utils.dots.DotLoader
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:elevation="1dp"
        app:color_array="@array/dot_colors"
        app:dot_radius="4dp"
        app:number_of_dots="4"
        />

    <ProgressBar
        android:id="@+id/progressbar_progressbutton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:elevation="1dp"
        />

</FrameLayout>